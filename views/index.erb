<h1>Here is your modest budget</h1>

<div class = "col-md-6">
  <h3>List of Expenses</h3>

    <% if @expenses.any?() %>
    <p>Click on an expense to see more details</p>
    <ul>
      <% @expenses.each() do |expense| %>
      <li><a href = "/expense/<%= expense.id() %>"><%= expense.name() %></a></li>
      <% end %>
    </ul>
    <% else %>
    <p>There are no expenses yet.</p>
    <% end %>

    <form action="/add" method = "post">
      <div class="form-group">
        <label for="expense">Enter expense</label>
        <input id="expense" name="expense" class="form-control" type="text">
      </div>
      <div class="form-group">
        <label for="amount">Enter amount</label>
        <input id="amount" name="amount" class="form-control" type="text">
      </div>
      <div class="form-group">
        <label for="date">Enter date of purchase</label>
        <input id="date" name="date" class="form-control" type="text">
      </div>
      <div class="form-group">
        <label for="category">Enter category of purchase</label>
        <input id="category" name="category" class="form-control" type="text">
      </div>

      <button type="submit" class="btn">Add</button>
    </form>

</div>




<div class = "col-md-6">
  <h3>List of Categories</h3>

    <% if @categories.any?() %>
    <p>Click on a category to see more details</p>
    <ul>
      <% @categories.each() do |category| %>
      <li><a href = "/category/<%= category.id() %>"><%= category.name() %></a></li>
      <% end %>
    </ul>
    <% else %>
    <p>There are no categories yet.</p>
    <% end %>

</div>
